<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" href="stylesheets/root.scss">
</head>
<body>
	<h1>Books</h1>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<th><%= book.title %></th>
			<th><%= book.body %></th>
			<th><%= link_to "Show",book_path(book.id) %></th>
			<th><%= link_to "Edit",edit_book_path(book.id)%></th>
			<th><%= link_to "Destroy",book_path(book.id),method: :delete, data: { confirm: 'Are you sure?' } %></th>
		</tr>
		<% end %>
	</table>
	<h2>New book</h2>
	<%= form_for(@book,url: "/books") do |f| %>
	<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit "Create Book" %>
	<% end %>
</body>
</html>
