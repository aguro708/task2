<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" href="../../assets/stylesheets/books.scss">
</head>
<body>
	<h1 class="margin">Editing Book</h1>
	<%= form_for(@book,url: "/books/#{@book.id}") do |f| %>
	<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>	
<div class="title">
	<h4>Title</h4>
	<%= f.text_field :title %>
</div>
<div class="body">
	<h4>Body</h4>
	<%= f.text_area :body %>
</div>
	<div class="update-book"><%= f.submit "Update Book" %></div>
	<% end %>
	<%= link_to "Show",book_path(@book.id) %>
	|
	<%= link_to "Back",books_path %>
</body>