<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" href="stylesheets/root.scss">
</head>
<body>
	<h1>Editing Book</h1>
	<%= form_for(@book,url: "/books/#{@book.id}") do |f| %>
	<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>	
	<h2>Title</h2>
	<%= f.text_field :title %>
	<h2>Body</h2>
	<%= f.text_area :body %>
	<%= f.submit "Update Book" %>
	<% end %>
</body>